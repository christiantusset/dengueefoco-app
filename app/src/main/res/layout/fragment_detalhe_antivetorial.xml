<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
											 xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
											 android:layout_height="match_parent">

	<android.support.v7.widget.CardView
			android:layout_width="0dp"
			android:layout_height="200dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:id="@+id/cardView">

		<android.support.constraint.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent">

			<TextView
					android:text="Agente:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
			<TextView
					android:text="1234"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewAgente" app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"/>
			<TextView
					android:text="Larvicida:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewLarvicida" app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp" tools:text="Sinopsade"/>
			<TextView
					android:text="Quantidade:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView4"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewQuantidade" app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp" tools:text="50"/>
			<TextView
					android:text="Status:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView8" app:layout_constraintTop_toTopOf="@+id/textViewStatus" app:layout_constraintEnd_toStartOf="@+id/textViewStatus" android:layout_marginEnd="8dp"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewStatus" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:text="Aguardando aprovação"/>
			<TextView
					android:text="Data:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView10" app:layout_constraintEnd_toStartOf="@+id/textViewData" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/textViewData"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewData" app:layout_constraintEnd_toEndOf="@+id/textViewStatus" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewStatus" tools:text="10/08/2019"/>
			<TextView
					android:text="Status do imóvel:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView6"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewStatusImovel" app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/textView12" tools:text="Visitado"/>
			<TextView
					android:text="Tipo do imóvel:"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintStart_toStartOf="@+id/textView12"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/textViewTipoImovel" app:layout_constraintTop_toTopOf="@+id/textView14" app:layout_constraintStart_toEndOf="@+id/textView14" android:layout_marginStart="8dp" tools:text="Casa"/>
		</android.support.constraint.ConstraintLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
			android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">

			<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" >
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Anexos:" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
				<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:src="@drawable/ic_gps_fixed_black_24dp"
				android:layout_gravity="center" android:layout_margin="8dp"/>
			</LinearLayout>
	</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
