<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textViewLabelDistrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Distrito:"
                android:textColor="@color/colorTextoLabel"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/textViewLabelData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/colorTextoLabel"
                android:textStyle="bold"
                android:text="Data:"
                app:layout_constraintEnd_toStartOf="@+id/textViewData"
                app:layout_constraintTop_toBottomOf="@+id/textViewLabelStatus"/>

        <TextView
                android:id="@+id/textViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewLabelData"
                tools:text="10/09/2019"/>

        <TextView
                android:id="@+id/textViewDistrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textViewLabelDistrito"
                app:layout_constraintTop_toTopOf="@+id/textViewLabelDistrito"
                tools:text="Central"/>

        <TextView
                android:id="@+id/textViewLabelStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Status:"
                android:textColor="@color/colorTextoLabel"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textViewStatus"
                app:layout_constraintTop_toTopOf="@+id/textViewStatus"/>

        <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Enviado"/>

        <TextView
                android:id="@+id/textViewLabelLarvicida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Larvicida:"
                android:textColor="@color/colorTextoLabel"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textViewLabelDistrito"
                app:layout_constraintTop_toBottomOf="@+id/textViewLabelDistrito"/>

        <TextView
                android:id="@+id/textViewLarvicida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textViewLabelLarvicida"
                app:layout_constraintTop_toTopOf="@+id/textViewLabelLarvicida"
                tools:text="Sinopsade"/>
        <TextView
                android:text="HorÃ¡rio:"
                android:layout_width="wrap_content"
                android:textColor="@color/colorTextoLabel"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/textView3" app:layout_constraintTop_toTopOf="@+id/textViewHorario" app:layout_constraintEnd_toStartOf="@+id/textViewHorario" android:layout_marginEnd="4dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/textViewHorario" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewData" android:layout_marginTop="8dp" tools:text="20:30:10"/>
        <TextView
                android:text="Notificado:"
                android:layout_width="wrap_content"
                android:textColor="@color/colorTextoLabel"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/textView7" app:layout_constraintTop_toBottomOf="@+id/textViewLabelLarvicida" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/textViewNotificado" tools:text="Sim" app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="@+id/textView7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
