<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
												   xmlns:app="http://schemas.android.com/apk/res-auto"
												   xmlns:tools="http://schemas.android.com/tools"
												   android:layout_width="match_parent"
												   android:layout_height="match_parent"
												   android:background="@color/colorBackgroundPadrao">


	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

			<androidx.cardview.widget.CardView android:layout_width="match_parent"
											   android:layout_height="wrap_content"
											   android:layout_marginStart="8dp"
											   android:layout_marginTop="8dp"
											   android:layout_marginEnd="8dp"
											   android:layout_marginBottom="8dp"
											   app:cardCornerRadius="8dp"
											   app:layout_constraintBottom_toBottomOf="parent"
											   app:layout_constraintEnd_toEndOf="parent"
											   app:layout_constraintHorizontal_bias="0.6"
											   app:layout_constraintStart_toStartOf="parent"
											   app:layout_constraintTop_toTopOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
					<Spinner
							android:layout_width="0dp"
							android:layout_height="wrap_content" android:id="@+id/spinnerDistrito" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
					<TextView
							android:text="Distrito"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/textView19" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

					<TextView
							android:id="@+id/labelSpinnerLarvicida"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:text="Larvicida:"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/spinnerDistrito" android:layout_marginTop="8dp"/>

					<Spinner
							android:id="@+id/spinnerLarvicida"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="@+id/labelSpinnerLarvicida"
							app:layout_constraintTop_toBottomOf="@+id/labelSpinnerLarvicida"/>
					<TextView
							android:text="Ciclo"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/spinnerLarvicida" android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/spinnerLarvicida"/>
					<Spinner
							android:layout_width="0dp"
							android:layout_height="wrap_content" android:id="@+id/spinnerCiclo" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_marginTop="8dp"
					android:layout_marginEnd="8dp"
					android:layout_marginBottom="8dp"
					app:cardCornerRadius="8dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintHorizontal_bias="0.6"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

					<EditText
							android:id="@+id/editTextQuantidade"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:ems="10"
							android:hint="Qtd. Larv."
							android:inputType="numberDecimal"
							android:textSize="14sp"
							app:layout_constraintEnd_toStartOf="@+id/editTextQtdFoco"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/switchNotificado" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>

					<TextView
							android:id="@+id/labelSpinnerTipoImovel"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="8dp"
							android:text="Tipo Imóvel:"
							app:layout_constraintStart_toStartOf="@+id/editTextBairro"
							app:layout_constraintTop_toBottomOf="@+id/editTextBairro"/>

					<Spinner
							android:id="@+id/spinnerTipoImovel"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="@+id/labelSpinnerTipoImovel"
							app:layout_constraintTop_toBottomOf="@+id/labelSpinnerTipoImovel"/>

					<EditText
							android:id="@+id/editTextCep"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginTop="8dp"
							android:layout_marginEnd="8dp"
							android:ems="10"
							android:hint="CEP"
							android:inputType="number"
							android:textSize="14sp"
							app:layout_constraintEnd_toStartOf="@+id/iconGps"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/editTextNumQuarto"/>

					<ImageView
							android:id="@+id/iconGps"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_marginEnd="8dp"
							android:src="@drawable/ic_gps_fixed_black_24dp"
							app:layout_constraintBottom_toBottomOf="@+id/editTextCep"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toEndOf="@+id/editTextCep"
							app:layout_constraintTop_toTopOf="@+id/editTextCep"/>

					<Button
							android:id="@+id/buttonSalvar"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginBottom="8dp"
							android:background="@color/colorPrimary"
							android:text="Salvar"
							android:textColor="@android:color/white"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toStartOf="@+id/buttonLimpar"
							app:layout_constraintStart_toStartOf="parent"/>

					<Button
							android:id="@+id/buttonLimpar"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginEnd="8dp"
							android:background="@color/colorAccent"
							android:text="Limpar"
							android:textColor="@android:color/white"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toEndOf="@+id/buttonSalvar"
							app:layout_constraintTop_toTopOf="@+id/buttonSalvar"/>

					<EditText
							android:id="@+id/editTextObservacao"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_margin="8dp"
							android:ems="10"
							android:gravity="start|top"
							android:hint="Observação"
							android:inputType="textMultiLine"
							android:textSize="14sp"
							app:layout_constraintBottom_toTopOf="@+id/buttonSalvar"
							app:layout_constraintTop_toBottomOf="@+id/editTextQuantidade"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
					/>

					<Switch
							android:id="@+id/switchNotificado"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:checked="true"
							android:text="Notificado"
							android:textColor="@color/colorTextoLabel"
							android:textSize="14sp"
							android:textStyle="bold"
							app:layout_constraintEnd_toStartOf="@+id/switchImovelFoco"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/spinnerPendencia" android:layout_marginTop="8dp" android:layout_marginEnd="16dp"/>

					<EditText
							android:id="@+id/editTextLogradouro"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginTop="8dp"
							android:layout_marginEnd="8dp"
							android:ems="10"
							android:hint="Logradouro"
							android:inputType="textPersonName"
							android:textSize="14sp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/editTextCep"/>

					<EditText
							android:id="@+id/editTextQuadra"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginTop="8dp"
							android:ems="10"
							android:hint="Quadra"
							android:inputType="number"
							android:textSize="14sp"
							app:layout_constraintEnd_toStartOf="@+id/editTextLote"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/editTextLogradouro"
							app:layout_constraintVertical_chainStyle="packed"/>

					<EditText
							android:id="@+id/editTextLote"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginEnd="8dp"
							android:ems="10"
							android:hint="Lote"
							android:inputType="number"
							android:textSize="14sp"
							app:layout_constraintEnd_toEndOf="@id/editTextNumero"
							app:layout_constraintStart_toEndOf="@+id/editTextQuadra"
							app:layout_constraintTop_toTopOf="@+id/editTextQuadra"/>

					<EditText
							android:id="@+id/editTextNumero"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginEnd="8dp"
							android:ems="10"
							android:hint="Número"
							android:inputType="number"
							android:textSize="14sp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toEndOf="@id/editTextLote"
							app:layout_constraintTop_toTopOf="@id/editTextLote"/>

					<EditText
							android:id="@+id/editTextBairro"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginTop="8dp"
							android:layout_marginEnd="8dp"
							android:ems="10"
							android:hint="Bairro"
							android:inputType="textPersonName"
							android:textSize="14sp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/editTextQuadra"/>

					<EditText
							android:id="@+id/editTextSequencia"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:ems="10"
							android:hint="Sequência"
							android:inputType="number"
							android:textSize="14sp"
							app:layout_constraintTop_toTopOf="@+id/editTextLado" app:layout_constraintStart_toEndOf="@+id/editTextLado" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

					<EditText
							android:id="@+id/editTextQtdFoco"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:ems="10"
							android:inputType="textPersonName"
							android:textSize="14sp"
							android:hint="Qtd. Foco"
							app:layout_constraintEnd_toStartOf="@+id/editTextQtdEliminado"
							app:layout_constraintStart_toEndOf="@+id/editTextQuantidade"
							app:layout_constraintTop_toTopOf="@+id/editTextQuantidade"/>

					<EditText
							android:id="@+id/editTextQtdEliminado"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginStart="8dp"
							android:layout_marginEnd="8dp"
							android:ems="10"
							android:inputType="textPersonName"
							android:hint="Qtd. Eliminado"
							android:textSize="14sp"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toEndOf="@+id/editTextQtdFoco"
							app:layout_constraintTop_toTopOf="@+id/editTextQtdFoco"/>
					<EditText
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:inputType="textPersonName"
							android:ems="10"
							app:layout_constraintEnd_toStartOf="@+id/editTextLado"
							android:id="@+id/editTextNumQuarto" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent" android:textSize="14sp" android:hint="Num. Quart"/>
					<EditText
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:inputType="textPersonName"
							android:ems="10"
							android:id="@+id/editTextLado" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/editTextSequencia" android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/editTextNumQuarto" android:layout_marginStart="8dp" android:textSize="14sp" android:hint="Lado"/>
					<Spinner
							android:layout_width="0dp"
							android:layout_height="wrap_content" android:id="@+id/spinnerPendencia" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
					<TextView
							android:text="Pendência:"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerTipoImovel" app:layout_constraintStart_toStartOf="@+id/spinnerTipoImovel"/>
					<Switch
							android:text="Imóvel com foco"
							android:layout_width="0dp"
							android:textColor="@color/colorTextoLabel"
							android:textSize="14sp"
							android:textStyle="bold"
							android:layout_height="wrap_content" android:id="@+id/switchImovelFoco" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinnerPendencia" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/switchNotificado" android:layout_marginStart="16dp"/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
