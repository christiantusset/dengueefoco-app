<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextAgente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Agente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelSpinnerLarvicida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Larvicida:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextAgente"
        app:layout_constraintTop_toBottomOf="@+id/editTextAgente" />

    <Spinner
        android:id="@+id/spinnerLarvicida"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelSpinnerLarvicida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelSpinnerLarvicida"
        app:layout_constraintTop_toTopOf="@+id/labelSpinnerLarvicida" />

    <EditText
        android:id="@+id/editTextQuantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Quantidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/labelSpinnerLarvicida"
        app:layout_constraintTop_toBottomOf="@+id/labelSpinnerLarvicida" />

    <TextView
        android:id="@+id/labelSpinnerStatusImovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status Imóvel:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextQuantidade"
        app:layout_constraintTop_toBottomOf="@id/editTextQuantidade" />

    <Spinner
        android:id="@+id/spinnerStatusImovel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelSpinnerStatusImovel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelSpinnerStatusImovel"
        app:layout_constraintTop_toTopOf="@+id/labelSpinnerStatusImovel" />

    <TextView
        android:id="@+id/labelSpinnerTipoImovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tipo Imóvel:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/labelSpinnerStatusImovel"
        app:layout_constraintTop_toBottomOf="@+id/labelSpinnerStatusImovel" />

    <Spinner
        android:id="@+id/spinnerTipoImovel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/labelSpinnerTipoImovel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelSpinnerTipoImovel"
        app:layout_constraintTop_toTopOf="@+id/labelSpinnerTipoImovel" />

    <EditText
        android:id="@+id/editTextCep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="CEP"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/iconGps"
        app:layout_constraintStart_toStartOf="@+id/labelSpinnerTipoImovel"
        app:layout_constraintTop_toBottomOf="@+id/labelSpinnerTipoImovel" />

    <ImageView
        android:id="@+id/iconGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_gps_fixed_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextCep"
        app:layout_constraintTop_toTopOf="@+id/editTextCep"
        app:layout_constraintBottom_toBottomOf="@+id/editTextCep"/>


    <Button
        android:id="@+id/buttonSalvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Salvar"
        app:layout_constraintEnd_toStartOf="@+id/buttonLimpar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCep" />

    <Button
        android:id="@+id/buttonLimpar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Limpar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonSalvar"
        app:layout_constraintTop_toTopOf="@+id/buttonSalvar" />
</androidx.constraintlayout.widget.ConstraintLayout>
